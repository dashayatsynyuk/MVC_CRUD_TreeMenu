                "plugins": ["state","contextmenu"],
            });
            $.jstree.defaults.core.createMethod = '../Home/AddEditCategory/0';
            $.jstree.defaults.core.editMethod = '../Home/AddEditCategory/';
            $.jstree.defaults.core.deleteMethod = '../Home/DeleteCategory/';
        });
    </script>
