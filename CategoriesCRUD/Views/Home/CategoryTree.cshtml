@using CategoriesCRUD.Models;

<h2>Categories</h2>
<link href="/Content/jsTree/themes/default/style.min.css" rel="stylesheet" />
<div class="form-body">
    <div id="jstree">
    </div>
</div>
@section scripts  
    {
    <script src="~/Scripts/jsTree3/jstree.js?v=0.0.0.2">
